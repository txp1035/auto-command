{
  "name": "auto-command",
  "version": "1.7.0",
  "private": true,
  "description": "Automatic command",
  "homepage": "https://github.com/txp1035/auto-command",
  "bugs": {
    "url": "https://github.com/txp1035/auto-command/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/txp1035/auto-command"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "tcmd": "./bin/autocmd.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "pnpm tsc",
    "genLangs": "esno ./src/translate/translate-api/languages/genTargetCode.ts",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./packages",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./packages",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "publish": "pnpm build & lerna publish",
    "republish": "lerna publish from-git",
    "sort": "npx sort-package-json",
    "test": "jest",
    "turbo:clean": "rimraf ./node_modules/.cache/turbo"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ],
    "*.(json)": [
      "npx sort-package-json"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/generator": "^7.18.7",
    "@babel/traverse": "^7.18.6",
    "@babel/types": "^7.18.9",
    "@txpjs/test": "workspace:^0.0.1",
    "@txpjs/utils-node": "^1.0.0-alpha.5",
    "@types/babel__core": "^7.1.19",
    "@types/babel__generator": "^7.6.4",
    "@types/fs-extra": "^9.0.13",
    "@types/got": "^9.6.12",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.182",
    "@types/md5": "^2.3.2",
    "@types/mustache": "^4.2.1",
    "@types/prettier": "^2.6.3",
    "@types/tunnel": "^0.0.3",
    "@types/yargs-parser": "^21.0.0",
    "@umijs/fabric": "^2.12.2",
    "auto-command": "workspace:^1.3.0",
    "cheerio": "1.0.0-rc.12",
    "esbuild": "^0.14.49",
    "eslint": "^8.21.0",
    "esno": "^0.16.3",
    "father": "^4.0.0-rc.4",
    "got": "9.6.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "lerna": "^5.1.7",
    "lint-staged": "^13.0.3",
    "md5": "^2.3.0",
    "pirates": "^4.0.5",
    "prettier": "^2.7.1",
    "query-string": "^7.1.1",
    "ts-node": "^10.9.1",
    "tunnel": "^0.0.6",
    "turbo": "^1.3.1",
    "typescript": "^4.7.4",
    "zx": "^7.0.7"
  },
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "authors": [
    "tangxiaoping <txp1035@gmail.com> (https://github.com/txp1035)"
  ]
}
